{
  "name": "clean-scripts",
  "version": "1.0.1",
  "description": "A CLI tool to make scripts in package.json clean.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/",
    "tsc": "tsc -p src/",
    "tslint": "tslint \"src/**/*.ts\"",
    "demoTest": "./bin/clean-scripts build",
    "test": "tsc -p spec && jasmine",
    "standard": "standard \"**/*.config.js\"",
    "fix": "standard --fix \"**/*.config.js\"",
    "release": "clean-release",
    "build": "npm run clean && npm run tsc",
    "lint": "npm run tslint && npm run standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plantain-00/clean-scripts.git"
  },
  "author": "York Yao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plantain-00/clean-scripts/issues"
  },
  "homepage": "https://github.com/plantain-00/clean-scripts#readme",
  "devDependencies": {
    "@types/jasmine": "2.5.53",
    "@types/minimist": "1.2.0",
    "@types/node": "8.0.17",
    "clean-release": "1.3.2",
    "jasmine": "2.6.0",
    "rimraf": "2.6.1",
    "standard": "10.0.2",
    "tslint": "5.5.0",
    "typescript": "2.4.2"
  },
  "dependencies": {
    "minimist": "1.2.0"
  },
  "bin": {
    "clean-scripts": "bin/clean-scripts"
  }
}
